<Window x:Class="ImageDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageDownloader"
        mc:Ignorable="d"
        Title="ImageDownloader" Height="500" Width="800" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded"  >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="25"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="0 10" >
            <Label x:Name="lblUrl" Content="Url" VerticalAlignment="Center" Padding="3"/>
            <TextBox x:Name="txbUrl" Text="" MinWidth="300" VerticalAlignment="Center" Padding="3"/>
            <Button x:Name="btnDownload" Content="Dowload" MinWidth="{DynamicResource minWidthButton}" Margin="5 0" Click="btnDownload_Click" />
            <Button x:Name="btnSettings" Content="Settings"  MinWidth="{DynamicResource minWidthButton}" Margin="5 0" />
        </StackPanel>

        <DataGrid Grid.Row="1" Grid.Column="1" x:Name="dgImages" RenderTransformOrigin="0.527,0.522" />

        <StackPanel x:Name="panCopyMove" Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="0 10">
            <Button x:Name="btnCopy" Content="Copy" MinWidth="{DynamicResource minWidthButton}" Margin="5 0"/>
            <Button x:Name="btnMove" Content="Move" MinWidth="{DynamicResource minWidthButton}" Margin="5 0"/>
        </StackPanel>

        <StatusBar x:Name="stbStatus" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" />

    </Grid>

</Window>
