<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ImageDownloader.Styles">

    <Style x:Key="textboxStyle">
        <Setter Property="TextBox.MinWidth" Value="300" />
    </Style>



    <Style TargetType="{x:Type Button}">
        <Style.Setters>
            <Setter Property="Height" Value="50" />
            <Setter Property="Margin" Value="5 0" />
            <!--<Setter Property="Background" Value="Red" />-->
        </Style.Setters>
    </Style>

    <Style x:Key="buttonDefault" TargetType="{x:Type Button}">


    </Style>

    <Style x:Key="buttonAlarm" TargetType="{x:Type Button}" BasedOn="{DynamicResource buttonDefault}">
        <Style.Setters>
            <Setter Property="Foreground" Value="#FF0000" />
        </Style.Setters>
    </Style>



    <Style TargetType="{x:Type StackPanel}">
        <Style.Setters>
            <Setter Property="Height" Value="50" />
            <Setter Property="Margin" Value="5 0" />
        </Style.Setters>
    </Style>



    <Style TargetType="{x:Type Label}">
        <Style.Setters>
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style.Setters>
    </Style>




   

</ResourceDictionary>